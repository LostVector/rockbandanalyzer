    <servlet>
        <servlet-name>api_upload</servlet-name>
        <servlet-class>com.rkuo.WebApps.RockBandAnalyzerWeb.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>api_upload</servlet-name>
        <url-pattern>/api/upload</url-pattern>
    </servlet-mapping>

